    <template id="copefrito_report_layout_footer" inherit_id="account.external_layout_footer"
              name="Copefrito report footer">
      <xpath expr="//div[@class='footer']" position="replace">
        <div class="footer" style="font-size: 65%;">
          <div class="last-page">
            <div class="row">
              <div class="col-xs-3 text-center">
                Pour <span t-field="company.name"/>,
              </div>
              <div class="col-xs-3 text-center">
                L'employé,
              </div>
